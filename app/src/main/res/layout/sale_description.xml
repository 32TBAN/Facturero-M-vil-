<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Fecha actual -->

    <!-- Botón "Guardar" -->

    <TextView
        android:id="@+id/textTituloOrdenVenta"
        android:layout_width="173dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:text="Órden de Venta"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFechaActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Fecha Actual"
        app:layout_constraintStart_toEndOf="@+id/textTituloOrdenVenta"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sección "Datos del Cliente" -->

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textFechaActual"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDatosCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Datos del Cliente"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textFechaActual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Cédula -->
    <EditText
        android:id="@+id/editCedula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Cédula"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDatosCliente" />

    <!-- Nombre -->

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Nombre"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCedula" />

    <Button
        android:id="@+id/btnBuscarCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Buscar Cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNombre" />

    <TextView
        android:id="@+id/textProductosFac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Productos de la factura"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarCliente"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/btnBuscarCliente" />

    <TextView
        android:id="@+id/textCod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Código"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textProductosFac"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        app:layout_constraintTop_toBottomOf="@id/textProductosFac"
        app:layout_constraintStart_toEndOf="@id/textCod"
        android:textAlignment="center"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cantidad"
        app:layout_constraintTop_toBottomOf="@id/textProductosFac"
        app:layout_constraintStart_toEndOf="@id/textName"
        android:textAlignment="center"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Precio"
        app:layout_constraintTop_toBottomOf="@id/textProductosFac"
        app:layout_constraintStart_toEndOf="@id/textQuantity"
        android:textAlignment="center"
        android:layout_margin="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
