<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTituloOrdenVenta"
            android:layout_width="173dp"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:text="Órden de Venta"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textFechaActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Fecha Actual"
            app:layout_constraintStart_toEndOf="@+id/textTituloOrdenVenta"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Guardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textFechaActual"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textDatosCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Datos del Cliente"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFechaActual" />

        <TextView
            android:id="@+id/editCedula"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="Cédula"
            android:minHeight="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDatosCliente" />

        <TextView
            android:id="@+id/editNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="Nombre"
            android:minHeight="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/editCedula"
            app:layout_constraintTop_toBottomOf="@+id/textDatosCliente" />

        <TextView
            android:id="@+id/textViewAdrressSelecd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="Direccion"
            android:minHeight="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCedula" />

        <Button
            android:id="@+id/btnBuscarCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="Buscar Cliente"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAdrressSelecd" />

        <TextView
            android:id="@+id/textProductosFac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Productos de la factura"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBuscarCliente" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="+ Agregar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@id/btnBuscarCliente" />

        <TextView
            android:id="@+id/textCod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="Id"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textProductosFac" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Nombre"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/textCod"
            app:layout_constraintTop_toBottomOf="@id/textProductosFac" />

        <TextView
            android:id="@+id/textExist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Existencia"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/textName"
            app:layout_constraintTop_toBottomOf="@id/textProductosFac" />

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Canti."
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/textExist"
            app:layout_constraintTop_toBottomOf="@id/textProductosFac" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:text="Precio"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/textQuantity"
            app:layout_constraintTop_toBottomOf="@id/textProductosFac" />

        <TextView
            android:id="@+id/textAccions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Acciones"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/textPrice"
            app:layout_constraintTop_toBottomOf="@id/textProductosFac" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProductsAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toTopOf="@+id/textCodFac"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textName" />

        <TextView
            android:id="@+id/textCodFacEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCodFac" />

        <TextView
            android:id="@+id/textArticlesEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textCodFac"
            app:layout_constraintTop_toBottomOf="@+id/textArticles" />

        <TextView
            android:id="@+id/textDiscountEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textArticles"
            app:layout_constraintTop_toBottomOf="@+id/textDiscount" />

        <TextView
            android:id="@+id/textIvaEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textDiscount"
            app:layout_constraintTop_toBottomOf="@+id/textIva" />

        <TextView
            android:id="@+id/textTotalEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textIva"
            app:layout_constraintTop_toBottomOf="@+id/textTotal" />


        <TextView
            android:id="@+id/textCodFac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Factura"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductsAdd" />

        <TextView
            android:id="@+id/textArticles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Total Articulos"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textCodFac"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductsAdd" />

        <TextView
            android:id="@+id/textDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="SubTotal-12%"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textArticles"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductsAdd" />

        <TextView
            android:id="@+id/textIva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="IVA%"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textDiscount"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductsAdd" />

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="Total"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textIva"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductsAdd" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>